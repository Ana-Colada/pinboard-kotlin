<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background_contrast"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.20" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_regular"
        android:layout_marginTop="@dimen/app_icon_offset"
        android:layout_marginEnd="@dimen/margin_regular"
        android:background="@drawable/background_auth"
        android:orientation="vertical"
        android:paddingStart="@dimen/padding_regular"
        android:paddingTop="@dimen/padding_large"
        android:paddingEnd="@dimen/padding_regular"
        app:elevation="@dimen/elevation_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageViewAppLogo"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            style="@style/AppTheme.Text.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_regular"
            android:gravity="center"
            android:text="@string/auth_title" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutAuthToken"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_regular"
            android:hint="@string/auth_token_hint">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextAuthToken"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textVisiblePassword" />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            style="@style/AppTheme.ClickableIcon"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_regular"
            android:layout_marginBottom="@dimen/margin_regular"
            android:contentDescription="@string/hint_help"
            android:tint="@color/color_accent"
            app:srcCompat="@drawable/ic_help" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewAppLogo"
        android:layout_width="@dimen/app_icon_size"
        android:layout_height="@dimen/app_icon_size"
        android:contentDescription="@string/cd_app_icon"
        android:elevation="@dimen/elevation_high"
        android:src="@drawable/pinkt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline" />

</androidx.constraintlayout.widget.ConstraintLayout>
