<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutRootFileViewer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="@dimen/padding_large"
    android:paddingEnd="@dimen/padding_large">

    <ImageView
        android:id="@+id/imageViewIcon"
        android:layout_width="@dimen/file_viewer_icon_size"
        android:layout_height="@dimen/file_viewer_icon_size"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/cd_file"
        app:srcCompat="@drawable/ic_file" />

    <TextView
        android:id="@+id/textViewDescription"
        style="@style/AppTheme.Text.SectionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_regular"
        android:layout_marginEnd="@dimen/margin_large"
        android:gravity="center"
        tools:text="Some url" />

    <TextView
        android:id="@+id/textViewUrl"
        style="@style/AppTheme.Text.Detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_large"
        android:gravity="center"
        tools:text="www.url.com" />

    <Button
        android:id="@+id/buttonOpenInFileViewer"
        style="@style/AppTheme.Button"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_large"
        android:text="@string/posts_open_with_file_viewer" />

</LinearLayout>
